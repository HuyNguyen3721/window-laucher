<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/_1sdp"
    android:id="@+id/layout_item_control"
    android:clickable="true"
    android:background="@color/color_0094FF"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_53sdp"
    android:padding="@dimen/_8sdp"
    android:focusable="true">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_margin="@dimen/_3sdp"
        app:srcCompat="@drawable/ic_airplane"
        app:layout_constraintBottom_toTopOf="@+id/txt_name_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <me.grantland.widget.AutofitTextView
        android:id="@+id/txt_name_icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:maxLines="1"
        android:text="@string/background"
        android:textColor="@color/white"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_icon"
        app:minTextSize="@dimen/_7sdp" />
</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ezteam.windowslauncher.widget.BlurCardView
        android:layout_width="0dp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="0dp" />

    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.ezteam.windowslauncher.widget.ItemFunctionView
            android:id="@+id/item_sort_by"
            android:layout_width="match_parent"
            app:fvTextFunction="@string/sort_by"
            app:fvShowIconNext="true"
            android:layout_height="wrap_content" />

        <com.ezteam.windowslauncher.widget.ItemFunctionView
            android:id="@+id/item_view"
            android:layout_width="match_parent"
            app:fvTextFunction="@string/view"
            app:fvShowIconNext="true"
            android:layout_height="wrap_content" />

        <com.ezteam.windowslauncher.widget.ItemFunctionView
            android:id="@+id/item_new_folder"
            android:layout_width="match_parent"
            app:fvTextFunction="@string/new_folder"
            app:fvShowIconNext="false"
            android:layout_height="wrap_content" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
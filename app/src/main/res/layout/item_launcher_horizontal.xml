<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_10sdp"
    android:background="?attr/selectableItemBackgroundBorderless"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_launcher"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintBottom_toTopOf="@id/tv_launcher"
        tools:src="@drawable/ic_widgets"
        android:padding="@dimen/_5sdp"
        app:layout_constraintHeight_percent="0.67"
        android:layout_height="0dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_launcher"
        android:layout_width="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/white"
        tools:text="Widgets"
        android:singleLine="true"
        android:ellipsize="middle"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintTop_toBottomOf="@id/iv_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>
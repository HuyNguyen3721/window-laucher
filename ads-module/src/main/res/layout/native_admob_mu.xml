<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/_2sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/ad_app_icon"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"  />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/ad_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:visibility="gone" />


            <LinearLayout
                android:id="@+id/info_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/ad_headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="asssssssssssssssssssssssssssssssssssssssssssssss"
                        android:textColor="#000000"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/ad_advertiser"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:ellipsize="end"
                            android:text="Sponsored"
                            android:textColor="#3A3A3A"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="italic"
                            android:layout_marginRight="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/ad_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_toLeftOf="@+id/ad_store"
                            android:gravity="right"
                            android:text="FREE"
                            android:textColor="#3A3A3A"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_20sdp" />

                        <TextView
                            android:id="@+id/ad_store"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:gravity="left"
                            android:text="Google Play"
                            android:textColor="#3A3A3A"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/ad_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="assssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
                        android:textColor="#3A3A3A"
                        android:textSize="@dimen/_10sdp" />


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

        <com.google.android.gms.ads.nativead.MediaView
            android:id="@+id/ad_media"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_below="@+id/info_view"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/ad_call_to_action"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="@drawable/bg_btn_install"
            android:gravity="center"
            android:text="Install"
            android:textColor="#ffffff"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:textColor="#939393"
            android:textSize="@dimen/_10sdp"
            android:text="Sorry for bothering you! This ads make our app free."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>


    </LinearLayout>


</com.google.android.gms.ads.nativead.NativeAdView>
